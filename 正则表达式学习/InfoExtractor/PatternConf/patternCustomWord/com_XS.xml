<?xml version="1.0" encoding="UTF-8"?>
<patterns>
  <!-- 模式资源引用 -->
  <includes>
    <include id="common"/>
  </includes>

<!-- 汉语字词句 -->
  <pattern id="非【罪】" regexpr="[^罪\x{0000}-\x{4DFF}\x{9FA6}]"/>

<!-- 【罪名】相关 -->
  <pattern id="单罪"   regexpr="\#字括\#+(?:、\#非【罪】\#+)*?[^有无]罪"/>
  <pattern id="多罪"   regexpr="\#字括\#+(?:、\#非【罪】\#+)*?[^有无]罪(?:[、和与及]\#字括\#+(?:、\#非【罪】\#+)*?[^有无]罪)*"/>
  <pattern id="涉罪"   regexpr="(涉嫌犯?(\#字顿\#{2,}?罪?、)*?\#字顿\#{2,}?罪?)"/>
  <pattern id="犯罪名" regexpr="(?:以犯?|犯)(\#多罪\#)"/>

<!-- 种类枚举 -->
  <pattern id="强制措施种类" regexpr="(监视居住|(?:刑事|行政)?拘留|取保候审|羁押|逮捕|[押解]回审查)"/>
  <pattern id="主刑种类"     regexpr="(死刑|[无有]期徒刑|拘役|管制)"/>
  <pattern id="有刑期主刑"   regexpr="(有期徒刑|拘役|管制)"/>
  <pattern id="附加刑种"     regexpr="(罚金|没收其?(?:个人)?(?:全部|部分)?财产|剥夺政治权利|驱逐出境)"/>
  <pattern id="财产刑种"     regexpr="(罚金|没收(?:个人)?(?:全部)?财产)"/>

<!-- 【判处刑罚】相关 -->
  <pattern id="主刑及刑期"   regexpr="\#有刑期主刑\#\#期限\#"/>
  <pattern id="缓刑及刑期"   regexpr="(缓[刑期])\#期限\#(执行)?"/>
  <pattern id="财产刑及金额" regexpr="\#财产刑种\#\#货币种类\#?(\d*\.?\d+?)元"/>
  <pattern id="刑期起止日期" regexpr="（刑期.*?自\#完整日期\#起?至\#完整日期\#止?.*?）"/>
  <pattern id="主刑情况"     regexpr="(判处)?(\#主刑种类\#|免[除予于]刑事处罚).*?。"/>

<!-- 【证据相关】 -->
  <pattern id="证人截止符"     regexpr="(?:[，。（）等的犯罪]|证[明实]|[辨指]认)"/>
  <pattern id="证据名和截止符" regexpr="([^\s，。：]+?)(?:[，：。]|(?:分别)?(?:证明(?!证实|材料)|证[实：]))"/>
  <pattern id="公安机关行为"   regexpr="([^\s，。]*?([在和与及的、]|[侦搜查]|拘留|逮捕|取保候审|监视|羁押|收缴|扣押|暂扣|发还|[抓起缴]获|[起获]赃|尸检|[检勘]验|勘[查察]|[决鉴]定|[笔记]录|案件|[接到]案|现场|工作|户籍|提供|出[警具示]|《.*?》|（.*?）))"/>
  <pattern id="证据KEY_勘查0"  regexpr="勘[察查验]"/>
  <pattern id="证据KEY_鉴定0"  regexpr="(?:鉴定|检验).*?(?:结论|报告|书)"/>
  <pattern id="证据KEY_证言0"  regexpr="证言"/>
  <pattern id="证据KEY_陈述0"  regexpr="被害人.*陈述"/>
  <pattern id="证据KEY_供述0"  regexpr="(?:被告|犯罪)人.*供述"/>
  <pattern id="证据KEY_书证1"  regexpr="(?:[抓起][获赃]经过|[借字][条据]|登记表?|复印件|护照)"/>
  <pattern id="证据KEY_书证2"  regexpr="(?:(?:[清存帐账详]|结算)单|[单收]据|存折|发货?票)"/>
  <pattern id="证据KEY_书证3"  regexpr="(?:判决|[裁决]定|调解|通知|委托|授权)书"/>
  <pattern id="证据KEY_书证4"  regexpr="(?:身份|[结离]婚|房产|通行|停车)证"/>
  <pattern id="证据KEY_书证5"  regexpr="(?:证明|笔录|记[载录]|报告|文件|(?:证明)?材料|(?:情况|工作)说明)"/>
  <pattern id="证据KEY_物证1"  regexpr="(?:缴获|收缴|扣押|物证|证物)"/>
  <pattern id="证据KEY_物证2"  regexpr="(?:凶器|枪支|(?:[手机]|冲锋)枪|匕首|(?:[挂尖镰菜]|水果)刀|[锄镐砖]头)"/>
  <pattern id="证据KEY_物证3"  regexpr="(?:毒品|罂粟|大麻|海洛[因英]|可卡因|甲基苯丙胺|摇头丸|冰毒)"/>
  <pattern id="证据KEY_物证4"  regexpr="(?:[胶照]片|录[音像象]|[软硬光优UＵuｕ]盘)"/>

<!-- 【量刑情节】相关 -->
<!--
  <pattern id="情节_犯罪地位"  regexpr="[是系](\#汉字\#*?中?的?([主从]犯|犯[罪意](活动)?的?\#字顿\#*?者|\#字顿\#*?(骨干(分子|成员)?|[主首]要(骨干|分子|成员))))"/>
  <pattern id="情节_犯罪动机"  regexpr="[是系](((被动|被?(纠集|胁迫)|临时起意|盲目)(参与|实施)?|过失)犯罪|胁从犯)"/>
  <pattern id="情节_犯罪频度"  regexpr="[是系]\#汉字\#*?[累再初偶]犯"/>
  <pattern id="情节_犯罪结果"  regexpr="[是系]((犯罪)?未遂犯?|([自主]动)?中止犯罪|犯罪中止)"/>
  <pattern id="情节_案后行为1" regexpr="([是系](自首|投案)|以(自首|投案)论)"/>
  <pattern id="情节_案后行为2" regexpr="有(自首|投案|、){1,3}的?情[况节]"/>
  <pattern id="情节_捕后行为"  regexpr="[是系]"/>
  <pattern id="情节_自然状况"  regexpr="[是系]"/>
  <pattern id="情节_直述"      regexpr=""/>
  <pattern id="情节_采纳"      regexpr=""/>
  <pattern id="向轻用语"       regexpr="((相对|实属|显著)?(轻微|较?[小轻]|并?不大|并[非不]严重))"/>
  <pattern id="向重用语"       regexpr="((实属)?((特别|极[为其]?)|较)?(巨?大|严重|恶劣|残忍|凶[狠残]|暴力))"/>
  <pattern id="社会危害"       regexpr="(犯罪行为的?)?(对于?)?社会的?危害性?(程度|后果)?"/>
  <pattern id="后果危害"       regexpr="(后果|\#社会危害\#)"/>
  <pattern id="情节_重1"       regexpr="((犯罪)?性质\#向重用语\#)"/>
  <pattern id="情节_重2"       regexpr="((采[取用]|使用|以)\#向重用语\#的?手段)"/>
  <pattern id="情节_重3"       regexpr="((犯罪|作案)?手段\#向重用语\#)"/>
  <pattern id="情节_重4"       regexpr="((犯罪|危害)?(情节([与和]|以?及其?|、))?后果\#向重用语\#)"/>
  <pattern id="情节_重5"       regexpr="((犯罪|行为)?情节(([与和]|以?及其?|、)?\#后果危害\#)?\#向重用语\#)"/>
  <pattern id="情节_重6"       regexpr="(\#社会危害\#\#向重用语\#)"/>
  <pattern id="情节_轻1"       regexpr="((犯罪|危害)?(情节([与和]|以?及其?|、))?后果\#向轻用语\#)"/>
  <pattern id="情节_轻2"       regexpr="((犯罪|行为)?情节(([与和]|以?及其?|、)?\#后果危害\#)?\#向轻用语\#)"/>
  <pattern id="情节_轻3"       regexpr="(\#社会危害\#\#向轻用语\#)"/>
  <pattern id="情节_向重"      regexpr="((且?(\#情节_重1\#|\#情节_重2\#|\#情节_重3\#|\#情节_重4\#|\#情节_重5\#|\#情节_重6\#)[、，]?)+)"/>
  <pattern id="情节_向轻"      regexpr="((且?(\#情节_轻1\#|\#情节_轻2\#|\#情节_轻3\#)[、，]?)+)"/>
-->
  <pattern id="采纳意见"       regexpr="[^。不]*?予以?采纳"/>
  <pattern id="量刑情节"       regexpr="([从减]轻|[从加]重|免[除予于](刑事)?)处罚|([不免]负|不予?追究)刑事责任"/>
  <pattern id="采取法定情节"   regexpr="依法\#汉字\#*?\#量刑情节\#"/>
  <pattern id="采取酌定情节"   regexpr="酌\#汉字\#*?\#量刑情节\#"/>
  <pattern id="建议量刑用语"   regexpr="(建议|[请要]求|提请)"/>
  <pattern id="系属枚举"       regexpr="((([主首累初偶]|胁?从|教唆.*?)犯|(犯罪)?未遂|犯罪中止|([自主]动)?中止犯罪|自首|投案|(残疾|聋哑)人)[、，]?)"/>
  <pattern id="行为枚举1"      regexpr="(有((重大)?的?立功|自首|投案|坦白|悔罪)的?(表[现示]|情[节况]))"/>
  <pattern id="行为枚举2"      regexpr="(罪行轻微|犯\#汉字\#*?罪时(未成年|[不未]满十[六八]周岁)|认罪态度较?好|如实(供述|交[待代])[^、，。]*?)"/>
  <pattern id="行为枚举3"      regexpr="((主动|积极)[缴交]纳罚金|(主动)?(全[额部])?(退[还赔]|赔偿)[^、，。]*?)"/>
  <pattern id="采纳枚举1"      regexpr="(的?辩护人)?([对关]于)?其?(.+?)，\#建议量刑用语\#.*?\#量刑情节\#\#采纳意见\#"/>
  <pattern id="采纳枚举2"      regexpr=".*?辩护人\#采纳意见\#"/>
  <pattern id="项_系属"        regexpr="((([主首累初偶]|胁?从|教唆.*?)犯|(犯罪)?未遂|犯罪中止|([自主]动)?中止犯罪|自首|投案|(残疾|聋哑)人)[、，]?)"/>
  <pattern id="项_具有"        regexpr="(有((重大)?的?立功|自首|投案|坦白|悔罪)的?(表[现示]|情[节况]))"/>
  <pattern id="项_行动"        regexpr=""/>
  <pattern id="情节_结论"      regexpr="([^，。]*?(酌|依法)\#汉字\#*?\#量刑情节\#)"/>
  <pattern id="情节_行为1"     regexpr="(\#行为枚举1\#+)，\#情节_结论\#"/>
  <pattern id="情节_行为2"     regexpr="(\#行为枚举2\#+)，\#情节_结论\#"/>
  <pattern id="情节_行为3"     regexpr="(\#行为枚举3\#+)，\#情节_结论\#"/>
  <pattern id="情节_系属"      regexpr="(属于?|[是系以])(\#系属枚举\#+)论?"/>
  <pattern id="情节_行为"      regexpr="((\#行为枚举1\#|\#行为枚举2\#|\#行为枚举3\#)+)[，。]\#情节_结论\#?"/>
  <pattern id="情节_意见"      regexpr="\#采纳枚举1\#"/>

<!-- 诉讼地位或称谓相关 -->
  <pattern id="称谓_民诉人_刑"   regexpr="附带民事诉讼(?:[原被]告|第三)人"/>
  <pattern id="称谓_辩护人_刑"   regexpr="((?:指定|委托)?辩护人(?:暨(?:(?:附带民事)?诉讼|委托)代理人)?)"/>
  <pattern id="称谓_诉理人_刑"   regexpr="((?:(?:指定|委托)?辩护人暨)?(?:(?:附带民事)?诉讼|委托)代理人)"/>
  <pattern id="称谓_诉理人_民"   regexpr="((?:诉讼|委托)?代理人)"/>

  <!-- 用于刑事一审案件的当事人诉讼地位 -->
  <pattern id="地位_自诉人_刑初" regexpr="(自诉人(?:暨\#称谓_民诉人_刑\#)?)"/>
  <pattern id="地位_民诉人_刑初" regexpr="((?:法定代理人暨)?\#称谓_民诉人_刑\#(?:暨.*?的法定代理人)?)"/>
  <pattern id="地位_被告人_刑初" regexpr="(被告人(?:暨\#称谓_民诉人_刑\#)?)"/>

  <!-- 用于刑事二审案件的当事人诉讼地位 -->
  <pattern id="地位_自诉人_刑终" regexpr="((?:被?上诉人（)?(?:[原一]|原一)审自诉人(?:暨(?:(?:[原一]|原一)审)?\#称谓_民诉人_刑\#)?）?)"/>
  <pattern id="地位_民诉人_刑终" regexpr="((?:被?上诉人（)?(?:[原一]审)?\#称谓_民诉人_刑\#）?)"/>
  <pattern id="地位_被告人_刑终" regexpr="((?:被?上诉人（)?(?:[原一]|原一)审被告人(?:暨(?:(?:[原一]|原一)审)?\#称谓_民诉人_刑\#)?）?)"/>

  <!-- 用于刑事再审案件的当事人诉讼地位 -->
  <pattern id="地位_申请人_刑再" regexpr="(申请(?:再审)?人)"/>
  <pattern id="地位_关系人_刑再" regexpr="(原审关系人)"/>
  <pattern id="地位_自诉人_刑再" regexpr="((?:(?:[原二]|原二)审被?上诉人（)?(?:[原一]|原一)审自诉人(?:暨(?:(?:[原一]|原一)审)?\#称谓_民诉人_刑\#)?）?)"/>
  <pattern id="地位_民诉人_刑再" regexpr="((?:(?:[原二]|原二)审被?上诉人（)?(?:(?:[原一]|原一)审)?\#称谓_民诉人_刑\#）?)"/>
  <pattern id="地位_被告人_刑再" regexpr="((?:(?:[原二]|原二)审被?上诉人（)?(?:[原一]|原一)审被告人(?:暨(?:(?:[原一]|原一)审)?\#称谓_民诉人_刑\#)?）?)"/>

<!-- 段落识别 -->
  <pattern id="段_量刑说明" regexpr="\#本院认为\#([\s\S]+?)(?=(?:根据|依[据照])《(?:中华人民共和国|刑法)|\n)"/>
  <pattern id="段_量刑说明2"   regexpr="(.+?)(?:(?:根据|依[据照])《(?:中华人民共和国|刑法).*)?\#裁判\#(?![\s\S]+\#裁判\#)"/>
  <pattern id="段_法律依据" regexpr="(((对|根据)被告人[^。]+?)?(根据|依[据照])《.+\#连写法律条款\#).*(判决|裁定)如下"/>
  <!-- 刑事一审案件用 -->
  <pattern id="段_自诉和受理_刑初" regexpr="\n(自诉人(.*?)以(.+?)于\#完整日期\#.*?提起控诉.*?)\n"/>
  <pattern id="段_起诉和受理_刑初" regexpr="\n((\#检察院名称\#)以(.+?起诉书)指控.+?于\#完整日期\#.*?提起公诉.*?)\n"/>

<!-- 典型句式 -->
  <pattern id="前科劣迹被处" regexpr="被.*?(?:并罚)?(?:判?处|处以?)?.*?。"/>

<!-- 逻辑行(记录)识别 -->
  <!-- 多种审级通用 -->
  <pattern id="行_前科劣迹"  regexpr="(?:于?\#日期\#，?([因犯].+?)|([因犯].+?)，?于?\#日期\#)，?\#前科劣迹被处\#"/>
  <pattern id="行_强制措施"  regexpr="(?:于?\#日期\#，?因(?:本案|\#涉罪\#)?|(?:因(?:本案|\#涉罪\#)，?于?)?\#日期\#)被\#汉字\#*?\#强制措施种类\#[、，。]"/>
  <pattern id="行_辩护人"    regexpr="\n\#汉字\#{0,4}?\#称谓_辩护人_刑\#(.+?)[，：]\#句_律师及单位\#?.*"/>
  <pattern id="行_诉理人"    regexpr="\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#(.+?)\#括号内说明\#?[，：]\#句_律师及单位\#?.*"/>
  <pattern id="行_证据"      regexpr="∵(案发后)?(\#短句\#?)((证[明实])|[与和]上述|[，：。])"/>
  <pattern id="行_法律依据"  regexpr="((?:对|根据)被告人.*?(?:根据|依[据照]))?\#法律依据\#?.*?\#连写法律条款\#[，。]?"/>

  <!-- 刑事一审案件用 -->
  <pattern id="行_自诉人_刑初" regexpr="\n\#地位_自诉人_刑初\#(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_民诉人_刑初" regexpr="\n\#地位_民诉人_刑初\#(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_被告人_刑初" regexpr="\n(被告人(?:\#汉字\#{1,10}被告人)?)(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?(?:\#称谓_辩护人_刑\#|\#称谓_诉理人_刑\#).*)*"/>

  <!-- 刑事二审案件用 -->
  <pattern id="行_自诉人_刑终" regexpr="\n\#地位_自诉人_刑终\#(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_民诉人_刑终" regexpr="\n(\#汉字\#{0,20}?(?:原告|第三|上诉(?=.{0,20}(?:原告|第三人)))人(?:（\#字顿\#+人）)?)(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_被告人_刑终" regexpr="\n(\#汉字\#{0,20}?(?:(?&lt;![事诉讼])被告|上诉(?=.{0,20}(?&lt;![事诉讼])被告|.*?(?:刑事拘留|逮捕)))人(?:（\#字顿\#+人）)?)(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?(?:\#称谓_辩护人_刑\#|\#称谓_诉理人_刑\#).*)*"/>

  <!-- 刑事再审案件用 -->
  <pattern id="行_申请人_刑再" regexpr="\n\#地位_申请人_刑再\#(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_关系人_刑再" regexpr="\n\#地位_关系人_刑再\#(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_自诉人_刑再" regexpr="\n\#地位_自诉人_刑再\#(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_民诉人_刑再" regexpr="\n\#地位_民诉人_刑再\#(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?\#称谓_诉理人_刑\#.*)*"/>
  <pattern id="行_被告人_刑再" regexpr="\n(\#汉字\#{0,20}?(?:(?&lt;![事诉讼])被告|申[请诉](?:再审)?人(?=.{0,20}(?&lt;![事诉讼])被告|.*?(?:刑事拘留|逮捕)))人(?:（\#字顿\#+人）)?)(.{2,10}?)\#括号内说明\#?，.*(?:\n法定代理人.*)*(?:\n\#汉字\#{0,4}?(?:\#称谓_辩护人_刑\#|\#称谓_诉理人_刑\#).*)*"/>

</patterns>
