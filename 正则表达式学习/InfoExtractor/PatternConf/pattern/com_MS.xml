<?xml version="1.0" encoding="UTF-8"?>
<patterns>
  <!-- 模式资源引用 -->
  <includes>
    <include id="common"/>
  </includes>

  <!-- 诉讼地位或称谓相关 -->
  <pattern id="称谓_诉理人_民"   regexpr="((?:诉讼|委托)?代理人)"/>

  <pattern id="受理案由前内容"   regexpr="(?:被告|(?:第三|被(?:上诉|申请(?:再审)?))人)(?:\#左括\#.+?\#右括\#)?"/>

  <!-- 用于民事一审案件的当事人诉讼地位 -->
  <pattern id="地位_当事人_民初" regexpr="([原被]告|第三人)(?:\#左括\#反诉([原被]告|第三人)\#右括\#)?"/>
  <pattern id="地位_当事人_民终" regexpr="((?:被?上诉人)?（?[原一]审(?:[原被]告|(?:第三|被?申请)人)(?:[、，]?(?:(?:原审)?反诉(?:[原被]告|第三人)|兼?.*?代理人))?）?)"/>
  <pattern id="地位_当事人_民再" regexpr="((?:被?申请(?:再审)?人)?（?(?:[原一二]审|(?:[原被]告|(?:被?上诉|第三)人)|反诉[原被]告|[、，])+）?)"/>
  <pattern id="地位_当事人_民"   regexpr="([原被]告|(?:第三|被?上诉)人)"/>

  <!-- 民事一审案件用 -->
  <pattern id="段_起诉和受理_民终" regexpr="\n上诉人.*?一案.*?\#终结关键字\#.*\n"/>

  <!-- 行政一审案件用 -->
  <pattern id="段_起诉和受理_行初" regexpr="\n原告.*?不服.*?诉讼.*?\#终结关键字\#.*\n"/>

  <!-- 逻辑行 -->
  <pattern id="行_当事人_民初" regexpr="\n\#地位_当事人_民初\#：?(.{2,30}?)\#括号内说明\#?[，。].*(?:\n法定代[表理]人.*)*(?:\n\#称谓_诉理人_民\#.*)*"/>
  <pattern id="行_当事人_民终" regexpr="\n\#地位_当事人_民终\#：?(.{2,30}?)\#括号内说明\#?[，。].*(?:\n法定代[表理]人.*)*(?:\n\#称谓_诉理人_民\#.*)*"/>
  <pattern id="行_当事人_民再" regexpr="\n\#地位_当事人_民再\#：?(.{2,30}?)\#括号内说明\#?[，。].*(?:\n法定代[表理]人.*)*(?:\n\#称谓_诉理人_民\#.*)*"/>

  <!-- 典型句式 -->
  <pattern id="费用交纳" regexpr="(?:[分负承]担)?(?:(\d+?)元)?[，。]?（?(?:均?(已[缴交]纳))?(?:于?([^\s，。]+?日内)[缴交]纳)?）?"/>
  <pattern id="上诉案由" regexpr="因(\#字顿括\#+)(?:\#左括\#\#字顿括\#\#右括\#)?(?:上诉)?一案，不服.+?民事(?:判决|裁定)"/>

</patterns>
